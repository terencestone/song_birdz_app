<!DOCTYPE html>
<html>
  <head>
    <title>SongBirdz</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', "https://fonts.googleapis.com/icon?family=Material+Icons" %>
    <%= stylesheet_link_tag  'application', "https://fonts.googleapis.com/css?family=Roboto" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar">
      <ul>
        <% if current_user %>
          <li><%= link_to "Welcome #{current_user.name}!", current_user %></li>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Profile", current_user %></li>
          <li><%= link_to "Matches", matches_path %></li>
          <li><%= link_to "Sign Out", signout_path %></li>
        <% else %>
          <li><%= link_to "Sign in with Spotify", "/auth/spotify" %></li>
        <% end %>
      </ul>
    </div>
    <div id="yield">
    <%= yield %>
  </div>
  </body>
</html>
